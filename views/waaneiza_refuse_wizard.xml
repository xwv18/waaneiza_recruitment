<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_waaneiza_applicant_refuse_wizard_form" model="ir.ui.view">
        <field name="name">waaneiza.applicant.refuse.wizard.form</field>
        <field name="model">waaneiza.applicant.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Refuse Reason">
                <group>
                    <field name="applicant_id" invisible="1"/>
                    <field name="refuse_reason_id" options="{'no_create': False}"/>
                    <field name="notes" placeholder="Optional notes..."/>
                </group>

                <footer>
                    <button string="Refuse"
                            name="action_confirm_refuse"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
